<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <welcome-file-list>
    <welcome-file>docnapweb.html</welcome-file>
  </welcome-file-list>

  <listener>
    <listener-class>org.netmelody.docnap.gwt.server.Bootstrap</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>org.netmelody.docnap.gwt.server.service.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/docnapweb/greet</url-pattern>
  </servlet-mapping>

</web-app>
